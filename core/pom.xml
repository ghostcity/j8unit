<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.j8unit</groupId>
        <artifactId>project</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>core</artifactId>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>
            <plugin>
                <!-- https://maven.apache.org/plugins/maven-javadoc-plugin/examples/javadoc-resources.html -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <!-- https://maven.apache.org/plugins/maven-javadoc-plugin/examples/javadoc-resources.html -->
                    <docfilessubdirs>true</docfilessubdirs>
<!--                     <resourcesArtifacts> -->
<!--                         <resourcesArtifact> -->
<!--                             <groupId>org.j8unit</groupId> -->
<!--                             <artifactId>javadoc-syntaxhighlighter</artifactId> -->
<!--                             <version>3.0.83-1-SNAPSHOT</version> -->
<!--                         </resourcesArtifact> -->
<!--                     </resourcesArtifacts> -->
                    <!-- https://maven.apache.org/plugins/maven-javadoc-plugin/examples/stylesheet-configuration.html -->
                    <!-- <stylesheetfile>styles/jdk8-stylesheet.css</stylesheetfile> -->
                    <!-- Add SyntaxHighlighter features (at the beginning of each JavaDoc HTML file). -->
                    <top><![CDATA[
                            <script src="{@docRoot}/resources/syntaxhighlighter_3.0.83/scripts/shCore.js" type="text/javascript"></script>
                            <script src="{@docRoot}/resources/syntaxhighlighter_3.0.83/scripts/shBrushJava.js" type="text/javascript"></script>
                            <link href="{@docRoot}/resources/syntaxhighlighter_3.0.83/styles/shCore.css" rel="stylesheet" type="text/css" title="Style">
                            <link href="{@docRoot}/resources/syntaxhighlighter_3.0.83/styles/shThemeDefault.css" rel="stylesheet" type="text/css" title="Style">
                            ]]>
                    </top>                            
                    <!-- Activate and customize SyntaxHighlighter features (at the bottom of each JavaDoc HTML file). -->
                    <footer><![CDATA[
                            <script type="text/javascript">
                               SyntaxHighlighter.defaults["auto-links"] = false;
                               SyntaxHighlighter.defaults["tab-size"] = 2;
                               SyntaxHighlighter.all();
                            </script>
                        ]]></footer>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>